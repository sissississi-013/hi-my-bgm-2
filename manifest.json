{
  "manifest_version": 3,
  "name": "HI MY BGM",
  "version": "1.0.0",
  "description": "Agentic focus bubble that senses your vibe and plays adaptive music.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/overlay.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/overlay.html",
        "content/expressions.svg",
        "content/faces.svg",
        "content/planet-bubble.js",
        "content/audio-analyzer.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
