# Extension uses chrome.storage.sync instead of .env

# Captain AI - Agent workflow orchestration
# See: https://docs.runcaptain.com/
HMB_USE_CAPTAIN=false
CAPTAIN_API_URL=https://api.runcaptain.com
CAPTAIN_API_KEY=

# Metorial AI - User memory & personalization
# See: https://metorial.com
HMB_USE_METORIAL=false
METORIAL_API_URL=https://api.metorial.com
METORIAL_API_KEY=

# Coval AI - Voice TTS/feedback
# See: https://www.coval.dev/
HMB_USE_COVAL=false
COVAL_API_URL=https://api.coval.dev
COVAL_API_KEY=
